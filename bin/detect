#!/usr/bin/env bash
# bin/use <build-dir>

BIN_DIR=$(cd $(dirname $0); pwd)
BUILD_DIR=$1

. $BIN_DIR/common

## SBT 0.10 allows either *.sbt in the root dir, or project/*.scala or .sbt/*.scala
if detect_sbt $BUILD_DIR ; then
  if is_play $BUILD_DIR ; then
    echo "Play 2.0 - $(detect_play_lang $BUILD_DIR)" && exit 0
  else
    echo "Scala" && exit 0
  fi
else
  echo "no" && exit 1
fi
